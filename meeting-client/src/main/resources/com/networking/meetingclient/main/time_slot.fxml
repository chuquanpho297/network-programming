<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox fx:id="body" prefHeight="726.0" prefWidth="1032.0" xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Label fx:id="body_title" alignment="CENTER_LEFT" prefHeight="59.0" prefWidth="1032.0"
               text="Teachers' available time slots"/>
        <HBox prefHeight="100.0" prefWidth="200.0">
            <children>
                <Label alignment="CENTER" prefHeight="67.0" prefWidth="127.0" text="Teach name:"/>
                <StackPane prefHeight="65.0" prefWidth="905.0">
                    <children>
                        <TextField fx:id="searchField" prefHeight="26.0" prefWidth="295.0"/>
                        <Button fx:id="searchButton" text="Search" StackPane.alignment="CENTER_RIGHT"/>
                    </children>
                </StackPane>
            </children>
        </HBox>
        <AnchorPane prefHeight="200.0" prefWidth="200.0">
            <children>
                <TableView fx:id="tableView" layoutY="9.0" prefHeight="619.0" prefWidth="1032.0">
                    <columns>
                        <TableColumn fx:id="teacherNameColumn" prefWidth="290.0" text="Teacher name"/>
                        <TableColumn fx:id="meetingTypeColumn" prefWidth="160.0" text="Meeting Type"/>
                        <TableColumn fx:id="remainingParticipantsColumn" prefWidth="131.0"
                                     text="Remaning participants"/>
                        <TableColumn fx:id="startTimeColumn" prefWidth="120" text="Start Time"/>
                        <TableColumn fx:id="endTimeColumn" prefWidth="120.0" text="End Time"/>
                        <TableColumn fx:id="actionColumn" prefWidth="150.0" text="Action"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
            </children>
        </AnchorPane>
        <Pagination fx:id="pagination" prefHeight="69.0" prefWidth="1032.0"/>
    </children>
</VBox>
